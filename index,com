<script>
let t=120;let e=document.getElementById('timer');
function n(){let o=Math.floor(t/60),i=t%60;
e.textContent=(o<10?'0':'')+o+':'+(i<10?'0':'')+i;
t>0?(t--,setTimeout(n,1e3)):showLesson()}n();
function showLesson(){
    document.getElementById('bait').style.display='none';
