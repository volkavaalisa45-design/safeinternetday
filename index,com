    <script>
        // –¢–∞–π–º–µ—Ä
        let timeLeft = 120;
        const timerEl = document.getElementById('timer');
        let lessonShown = false;
        
        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerEl.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 30) {
                timerEl.style.color = '#ff6b6b';
            }
            
            if (timeLeft <= 10) {
                timerEl.style.color = '#dc3545';
                timerEl.style.animation = 'pulseIcon 0.5s ease-in-out infinite';
            }
            
            if (timeLeft > 0) {
                timeLeft--;
                setTimeout(updateTimer, 1000);
            } else if (!lessonShown) {
                showLesson();
            }
        }
        
        updateTimer();
        
        // –§—É–Ω–∫—Ü–∏—è –ø–æ–∫–∞–∑–∞ —É—Ä–æ–∫–∞
        function showLesson() {
            lessonShown = true;
            document.getElementById('bait').style.display = 'none';
            document.getElementById('lesson').style.display = 'block';
            
            if (window.innerWidth < 768) {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }
        
        // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –ø–æ–∫–∞–∑ —á–µ—Ä–µ–∑ 30 —Å–µ–∫—É–Ω–¥
        setTimeout(() => {
            if (!lessonShown) {
                showLesson();
            }
        }, 30000);
        
        // –£–ª—É—á—à–µ–Ω–∏—è –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö
        if ('ontouchstart' in window) {
            document.querySelector('.action-button').style.padding = '26px 20px';
            document.querySelector('.restart-button').style.padding = '26px 20px';
        }
    </script>
